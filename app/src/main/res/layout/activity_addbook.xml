<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addbook">
    <RelativeLayout
        android:id="@+id/m1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/t1"
            style="@style/Appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marge"
            android:layout_marginTop="8dp"

            android:text="@string/app_tiltle" />

        <TextView
            android:id="@+id/t2"
            style="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginLeft="@dimen/marge"
            android:text="Add book"
            app:layout_constraintStart_toStartOf="@+id/t1"
            app:layout_constraintTop_toBottomOf="@+id/t1" />
    </RelativeLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/description"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/year"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="181dp"
        android:layout_height="153dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="670dp"
        android:layout_marginBottom="8dp"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/home"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="682dp"
        android:background="#E1DCDC"

        android:drawableTop="@drawable/ic_home"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mycollection"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="682dp"
        android:background="@color/yellow"
        android:drawableTop="@drawable/ic_f_start"
        android:text="My collection"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="682dp"
        android:background="@color/yellow"
        android:drawableTop="@drawable/ic_add"
        android:text="Add"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/confirmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        android:text="Confirm"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/limage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="110dp"
        android:text="Choose image"
        tools:ignore="MissingConstraints" />




</RelativeLayout>