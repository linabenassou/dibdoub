<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mycollection">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ICbookXML1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/book_icon"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtTitleXML1"
        style="@style/defaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marge"
        android:text="@string/home_book_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtYearXML1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_book_year"
        app:layout_constraintStart_toStartOf="@+id/txtTitleXML1"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleXML1"
        style="@style/smallText"
        />

    <ImageButton
        android:id="@+id/ICStarXML1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_f_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/marge"/>


</androidx.constraintlayout.widget.ConstraintLayout>